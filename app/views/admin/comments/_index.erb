<% comments = commentable.comments.includes(:author).references(:author).order(created_at: :desc) %>
<% if comments.any? %>
  <details>
    <summary>
      <h4>
        <%= pluralize(comments.count, local_assigns[:item_label] || "activity") %>
      </h4>
    </summary>

    <div class="rows" role="list">
      <% comments.each do |comment| %>
        <%= render partial: "admin/comments/comment", locals: { comment: comment } %>
      <% end %>
    </div>
  </details>
<% else %>
  <div class="info" role="status"><%= local_assigns[:empty_text] || "No activity yet." %></div>
<% end %>
